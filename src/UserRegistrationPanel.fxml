<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #333333;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UserRegistrationPanelController">
    <children>
        <Label alignment="CENTER" layoutX="50.0" layoutY="40.0" prefHeight="35.0" prefWidth="500.0" style="-fx-font-size: 24; -fx-font-weight: bold; -fx-text-fill: white; -fx-alignment: CENTER;" text="Register" />
        <Label layoutX="75.0" layoutY="120.0" prefWidth="200.0" style="-fx-font-size: 14; -fx-text-fill: white;" text="Username" />
        <TextField fx:id="regUsernameField" layoutX="75.0" layoutY="145.0" prefWidth="200.0" promptText="Enter your username" style="-fx-background-color: #444; -fx-text-fill: white; -fx-font-size: 14;" />
        <Label layoutX="325.0" layoutY="120.0" prefWidth="200.0" style="-fx-font-size: 14; -fx-text-fill: white;" text="Password" />
        <TextField fx:id="regPasswordField" layoutX="325.0" layoutY="145.0" prefWidth="200.0" promptText="Enter your password" style="-fx-background-color: #444; -fx-text-fill: white; -fx-font-size: 14;" />
        <Label fx:id="warning" layoutX="50.0" layoutY="190.0" prefWidth="500.0" style="-fx-font-size: 12; -fx-text-fill: #FF0000; -fx-alignment: CENTER;" />
        <Button fx:id="regButton" layoutX="250.0" layoutY="240.0" mnemonicParsing="false" onAction="#registration" prefWidth="100.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 12;" text="Register" />
        <Button layoutX="190.0" layoutY="288.0" mnemonicParsing="false" onAction="#goToLoginPanel" prefHeight="30.0" prefWidth="221.0" style="-fx-background-color: #008CBA; -fx-text-fill: white; -fx-font-size: 12;" text="Have an account? Login" />
    </children>
</AnchorPane>
